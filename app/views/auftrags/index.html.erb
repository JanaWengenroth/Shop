<h1>Auftragsliste</h1>

<table>
  <thead>
    <tr>
      <th>Datum</th>
      <th>KundenID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @auftrags.each do |auftrag| %>
      <tr>
        <td align="center"><%= auftrag.datum %></td>
        <td align="center"><%= auftrag.kunden_id %></td>
        <td><%= link_to 'Show', auftrag %></td>
        <td><%= link_to 'Edit', edit_auftrag_path(auftrag) %></td>
        <td><%= link_to 'Destroy', auftrag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Auftrag', new_auftrag_path %>

<h1>Listing kundes</h1>

<table>
  <thead>
    <tr>
      <th>Vorname</th>
      <th>Nachname</th>
      <th>Email</th>
      <th>Strasse</th>
      <th>Hausnummer</th>
      <th>Plz</th>
      <th>Tel</th>
       <th>Rolle</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kundes.each do |kunde| %>
      <tr>
        <td><%= kunde.vorname %></td>
        <td><%= kunde.nachname %></td>
        <td><%= kunde.email %></td>
        <td><%= kunde.strasse %></td>
        <td><%= kunde.hausnummer %></td>
        <td><%= kunde.plz %></td>
        <td><%= kunde.tel %></td>
        <td><%= kunde.rolle %></td>
        <td><%= link_to 'Show', kunde %></td>
        <td><%= link_to 'Edit', edit_kunde_path(kunde) %></td>
        <td><%= link_to 'Destroy', kunde, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


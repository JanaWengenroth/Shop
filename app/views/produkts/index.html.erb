<br>
<h2 style="font-weight:bold; color:purple">Produktliste</h2><br>

<table id="produktliste">
  <thead>
    <tr>
      <th>Bild</th>
      <th>Name</th>
      <th>Beschreibung</th>
      <th>Preis</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @produkts.each do |produkt| %>
      <tr>
        <%  if Kunde.where(:email => selected).first.rolle == 2%>
        <td><%= link_to(image_tag(produkt.bild.url(:medium)), produkt) %></td>
        <td><%= produkt.name %></td>
        <td><%= produkt.beschreibung %></td>
        <td><%= produkt.preis %></td>
        <td><%= link_to 'Produkt anzeigen', produkt %></td>
         <% else  %>
        <td><%= link_to(image_tag(produkt.bild.url(:medium)), produkt) %></td>
        <td><%= produkt.name %></td>
        <td><%= produkt.beschreibung %></td>
        <td><%= produkt.preis %></td>
        <td><%= link_to 'Show', produkt %></td>
        <td><%= link_to 'Edit', edit_produkt_path(produkt) %></td>
        <td><%= link_to 'Destroy', produkt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Neues Produkt', new_produkt_path %>
